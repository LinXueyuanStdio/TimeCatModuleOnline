<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t_window_bg">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null" />

    <FrameLayout
        android:id="@+id/bottom_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:layout_behavior="@string/bye_burger_bottom_behavior">

        <ImageView
            android:id="@+id/mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/t_miniplaybar_bg"
            android:contentDescription="@string/about"
            android:scaleType="centerInside" />

        <com.timecat.layout.ui.standard.navi.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t_miniPlayBarHeight"
            android:layout_gravity="bottom" />
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
