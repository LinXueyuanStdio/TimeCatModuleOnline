<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/saying">

    <LinearLayout
        android:id="@+id/footer_like_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small">

        <ImageView
            android:id="@+id/footer_like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/temp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/user_ic_love"
            app:tint="@color/master_icon_view_hint" />

        <TextView
            android:id="@+id/footer_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:textColor="@color/master_textColorSecondary"
            android:textSize="14sp"
            tools:text="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_comment_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/temp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_comment"
            app:tint="@color/master_icon_view_hint" />

        <TextView
            android:id="@+id/footer_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:textColor="@color/master_textColorSecondary"
            android:textSize="14sp"
            tools:text="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_share_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/temp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_share_white_24dp"
            app:tint="@color/master_icon_view_hint" />

        <TextView
            android:id="@+id/footer_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:textColor="@color/master_textColorSecondary"
            android:textSize="14sp"
            tools:text="100" />
    </LinearLayout>
</LinearLayout>
